@model LeaveAllocationEditVM

@{
    ViewData["Title"] = "EditAllocation";
}

<h1>Edit @Model.LeaveType.Name Allocation for @Model.Employee.FirstName @Model.Employee.LastName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAllocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="LeaveTypeId" />
            <div class="form-group">
                <label asp-for="NumberOfdays" class="control-label"></label>
                <input asp-for="NumberOfdays" class="form-control" />
                <span asp-validation-for="NumberOfdays" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Period" class="control-label"></label>
                <input asp-for="Period" class="form-control" />
                <span asp-validation-for="Period" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a class="btn btn-dark" asp-action="Index">Back to List</a>&nbsp;&nbsp;
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
   
</div>

